{
  "name": "huawei-cloud-ecs-manager",
  "version": "1.0.3",
  "description": "Desktop application to manage Huawei Cloud ECS instances",
  "main": "dist/main/index.js",
  "scripts": {
    "build:ts": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build:ts && electron .",
    "dev": "npm run build:ts && electron . --dev",
    "build": "npm run build:ts && electron-builder",
    "build:win": "npm run build:ts && electron-builder --win",
    "build:mac": "npm run build:ts && electron-builder --mac",
    "build:linux": "npm run build:ts && electron-builder --linux",
    "pack": "npm run build:ts && electron-packager . \"ECS Switch\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=build/icon.ico --app-copyright=\"ECS Manager\" --win32metadata.CompanyName=\"Huawei Cloud Tools\""
  },
  "keywords": [
    "huawei",
    "cloud",
    "ecs",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@huaweicloud/huaweicloud-sdk-core": "^3.1.0",
    "@huaweicloud/huaweicloud-sdk-ecs": "^3.1.0",
    "@huaweicloud/huaweicloud-sdk-iam": "^3.1.0",
    "@huaweicloud/huaweicloud-sdk-vpc": "^3.1.173",
    "electron-store": "^8.1.0",
    "uuid": "^8.3.2",
    "v8-compile-cache": "^2.4.0"
  },
  "build": {
    "appId": "com.huawei.ecs-manager",
    "productName": "ECS Switch",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/@huaweicloud/**/*"
    ],
    "asar": true,
    "compression": "normal",
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
